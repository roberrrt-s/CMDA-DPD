{{> dashhead}}

<section class="content-wrapper">
    <section class="content-options">
        <h1>Editing image "Golden Dot Awards 2016"</h1>

        <section class="flex-container">
            <fieldset>
            <legend>Preview</legend>

                <figure class="preview-image">
                    <img src="/media/poster.jpg">
                </figure>

            </fieldset>

            <fieldset>
            <legend>Options</legend>

                <label>Content name:
                    <input type="text" placeholder="Name"></input>
                </label>

                <label>Description:
                    <input type="text" placeholder="Description"></input>
                </label>

                <label>Display for x seconds:
                    <input type="text" placeholder="Enter time in seconds"></input>
                </label>

                <label>New image:
                    <input type="file"></input>
                </label>

            </fieldset>

        </section>

        <fieldset>
        <legend>Delete</legend>
            <p>Do you wish to delete this item??</p>
            <a href="../delete/"><button>Delete item</button></a>
        </fieldset>

        <a href="../"><button>Save changes</button></a>

    </section>

</section>

{{> dashfoot}}