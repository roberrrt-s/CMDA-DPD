{{> dashhead}}

<div class="content-wrapper">
	<section class="content-divider">
		<h1>Images</h1>
	</section>

	<div class="content-category-wrapper">

		{{#each image}}
			<section class="content-item"><a href="/dashboard/content/edit/{{id}}">
				<header class="block-image">
					<img src="/uploads/{{link}}">
				</header>
				<footer class="content-footer">
					<ul>
						<li><strong>Name: </strong>{{name}}</li>
						<li><strong>Description: </strong>{{description}}</li>
					</ul>
				</footer>
			</a></section>
		{{/each}}

		<section class="content-item new-item"><a href="/dashboard/content/new/image">
			<header class="block-image">
				<img src="/media/content-new.png">
			</header>
			<footer class="content-footer">
				<ul>
					<li><strong>Upload new image</strong></li>
				</ul>
			</footer>
		</a></section>

	</section>

	<section class="content-divider">
		<h1>Video's</h1>
	</section>

	<section class="content-category-wrapper">

		{{#each video}}
			<section class="content-item"><a href="/dashboard/content/edit/{{id}}">
				<header class="block-image">
					<img src="/media/play.png">
				</header>
				<footer class="content-footer">
					<ul>
						<li><strong>Name: </strong>{{name}}</li>
						<li><strong>Description: </strong>{{description}}</li>
					</ul>
				</footer>
			</a></section>
		{{/each}}

		<section class="content-item new-item"><a href="/dashboard/content/new/video">
			<header class="block-image">
				<img src="/media/content-new.png">
			</header>
			<footer class="content-footer">
				<ul>
					<li><strong>Add new video</strong></li>
				</ul>
			</footer>
		</a></section>

	</section>

	<section class="content-divider">
		<h1>Social media</h1>
	</section>

	<section class="content-category-wrapper">

		{{#each tweet}}
			<section class="content-item"><a href="/dashboard/content/edit/{{id}}">
				<header class="block-image">
					<img src="/media/twitter.png">
				</header>
				<footer class="content-footer">
					<ul>
						<li><strong>Name: </strong>{{name}}</li>
						<li><strong>Description: </strong>{{description}}</li>
					</ul>
				</footer>
			</a></section>
		{{/each}}

		<section class="content-item new-item"><a href="/dashboard/content/new/tweet">
			<header class="block-image">
				<img src="/media/content-new.png">
			</header>
			<footer class="content-footer">
				<ul>
					<li><strong>Add new tweet</strong></li>
				</ul>
			</footer>
		</a></section>
	
	</div>

</div>

{{> dashfoot}}