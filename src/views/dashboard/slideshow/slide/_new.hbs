{{> dashhead}}

<div class="content-wrapper">
	
	<section class="slideshow-options">
	<form enctype="multipart/form-data" action="/dashboard/slideshow/edit/{{id}}/slide/new/" method="post"> 

		<fieldset class="slideshow-options__fieldset">
		<legend>Content</legend>

			<label>Image<input type="radio" name="type" value="image" checked></label>
			<label>YouTube video<input type="radio" name="type" value="video"></label>
			<label>Tweet<input type="radio" name="type" value="tweet"></label>
					 
		</fieldset>

		<fieldset class="slideshow-options__fieldset">
		<legend>Slide meta options</legend>

			<label>Slide duration:
				<input name="duration" type="number" placeholder="Duration"></input> sec
			</label>

			<label>Slide order:
				<input name="order" type="number" placeholder="Order"></input>
			</label>

			{{#if error}}
				<div class="msg">
					{{error}}
				</div>
			{{/if}}
					
		</fieldset>

		<fieldset id="submit-image">
		<legend>Submit a image</legend>

			<label>New image<input type="radio" name="image_type" value="new" checked></label>
			<label>Use existing image<input type="radio" name="image_type" value="existing"></label>

			<fieldset>
				<legend>New image</legend>

				<label>Image title:
					<input name="image_title" type="text" placeholder="Enter the image title"></input>
				</label>

		        <label>New image:
		            <input id="file-upload" name="file" type="file"></input>
		        </label>

	        </fieldset>
	        <fieldset>
	        <legend>Select existing image</legend>
	    		<label>Select existing image:
	                <select name="existing_image_id">
	                	{{#each images}}
	                    	<option value="{{id}}">Image-{{id}} - {{name}}</option>
	                	{{/each}}
	                </select>
	            </label>
	        </fieldset>

		</fieldset>

		<fieldset id="submit-video">
		<legend>Submit a YouTube URL</legend>

			<label>YouTube Title:
				<input name="youtube_name" type="text" placeholder="Enter the YouTube title"></input>
			</label>

			<label>YouTube URL:
				<input name="youtube_url" type="text" placeholder="Enter the YouTube URL"></input>
			</label>

		</fieldset>

		<fieldset id="submit-tweet">
		<legend>Tweet URL:</legend>

			<label>Tweet title:
				<input name="tweet_name" type="text" placeholder="Enter the Tweet title"></input>
			</label>	

			<label>Tweet URL:
				<input name="tweet_url" type="text" placeholder="Enter the Tweet URL"></input>
			</label>		

		</fieldset>
		<input type="submit" value="Add new slide">

	</form>
	<a href="../../"><button>Cancel</button></a>

	</section>

</div>

{{> dashfoot}}