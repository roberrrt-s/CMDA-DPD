{{> dashhead}}

<div class="content-wrapper">
    
    <section class="slideshow-options">
    <form action="/dashboard/slideshow/new/" method="post"> 

        <fieldset class="slideshow-options__fieldset">
        <legend>Slideshow options</legend>

            <label>Slideshow name:
                <input name="name" type="text" placeholder="Name"></input>
            </label>

            <label>Description:
                <textarea name="description" type="text" rows="5" placeholder="Description"></textarea>
            </label>

            <label>Assign this slideshow to a screen
                <select name="slideshow">
                    <option value="">Do not assign screen</option>
                    {{#each screen}}
                        <option value="{{id}}">{{name}}</option>
                    {{/each}}
                </select>
            </label>

        </fieldset>

        <input type="submit" value="Add new slideshow">

    </form>
    <a href="../"><button>Cancel</button></a>

    </section>

</div>

{{> dashfoot}}